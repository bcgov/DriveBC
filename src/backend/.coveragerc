# .coveragerc to control coverage.py
[run]
branch = True
omit =
        */tests/*
        */test_data/*
        */migrations/*
        */__init__.py
        */apps/feed/tasks.py
        */tests.py
        */sandbox.py
        */manage.py
        */venv/*
        */management/*
        */config/*
        */wagtail_hooks.py
        */admin.py
        */adapters.py
        */urls.py

[report]
omit =
        */tests/*
        */test_data/*
        */migrations/*
        */__init__.py
        */apps/feed/tasks.py
        */tests.py
        */sandbox.py
        */manage.py
        */venv/*
        */management/*
        */config/*
        */wagtail_hooks.py
        */admin.py
        */adapters.py
        */urls.py

# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

ignore_errors = True
show_missing = True
